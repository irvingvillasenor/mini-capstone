<h1>Edit Product</h1>

<form action="/products/<%= @product.id %>%" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="text" name="name" value="<%=@product.title%>">
  </div><br>
  <div>
    Price: <input type="text" name="price" value="<%=@product.price%>">
  </div><br>
  <div>
    Description: <input type="description" name="name" value="<%=@product.title%>">
  </div><br>
  <div>
    Supplier: <input type="description" name="supplier_id" value="<%=@product.supplier_id%>%">
  </div><br>
    
  <div>
    <button type="submit">Edit Product</button>
  </div>
</form>