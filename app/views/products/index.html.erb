<h1>All Products</h1>

<%@products.each do |product|%>
  <h3>Name: <%= product.name%></h3>
  <img src="<%=product.images[0].url%>" height="200" width="300" alt="">
  <h3>Price: <%= number_to_currency(product.price)%></h3>
  <h3>Description: <%= product.description%></h3>
  <h3>Supplier: <%= product.supplier_id%></h3>
  <h3>In_stock: <%= product.in_stock%></h3>
  <a href="/products/<%=product.id%>">More info </a>
<% end%>